{
    "swagger": "2.0",
    "info": {
        "version": "1.0",
        "title": "Document Retrieval API",
        "description": "The Document Retrieval API provides programmatic access to our document repository, enabling applications to manage documents with increased efficiency, improved information control, and reduced cost."
    },
    "basePath": "/documents/v1.0",
    "paths": {
        "/content": {
            "post": {
                "tags": [
                    "Document Retrieval"
                ],
                "summary": "Retrieve a document from the repository",
                "description": "Retrieve an existing document from a repository. The object ID and document source parameters must be supplied in the request.",
                "operationId": "retrieveUsingPOST",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "JWT Bearer Token",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "description": "The objectID of the desired document and the DocumentSource represented as JSON.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ContentRequestObject"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ContentResponseObject"
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "deprecated": false
            }
        }
    },
    "definitions": {
        "ContentRequestObject": {
            "type": "object",
            "properties": {
                "objectId": {
                    "type": "string",
                    "example": "e86411ad-579d-48b8-b4b8-9f14b1e8bcdd"
                },
                "DocumentSource": {
                    "type": "string",
                    "example": "my-programme"
                }
            }
        },
        "ContentResponseObject": {
            "type": "object",
            "properties": {
                "fileData": {
                    "type": "string",
                    "description": "Base64 encoded file data",
                    "example": "VGhpcyB3YXMgYSBwbGFpbiB0ZXh0IGZpbGUu"
                },
                "length": {
                    "type": "integer",
                    "description": "The size of the file in bytes",
                    "example": 27
                },
                "mimeType": {
                    "type": "string",
                    "example": "text/plain",
                    "description": "The mime type of the retrieved file"
                },
                "filename": {
                    "type": "string",
                    "example": "myfile.txt",
                    "description": "The name of the retrieved file"
                },
                "status": {
                    "type": "string",
                    "example": "OK",
                    "description": "HTTP style response message"
                },
                "code": {
                    "type": "integer",
                    "format": "int32",
                    "example": 200,
                    "description": "HTTP style response code"
                },
                "message": {
                    "type": "string",
                    "description": "Status message from the API",
                    "example": "Success response"
                }
            }
        }
    }
}