{
    "openapi": "3.0.0",
    "info": {
        "description": "This is Personal Loan Quotes",
        "version": "1.0.0",
        "title": "Personal Loan Quotes",
        "contact": {
            "name": "Service Desk",
            "url": "https://www.bankofapis.com/support"
        },
        "license": {
            "name": "Commercial Licence",
